<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/forecast">

        <ListPreference
            android:defaultValue="7"
            android:entries="@array/number_of_days_labels"
            android:entryValues="@array/number_of_days_values"
            android:key="forecast_number_of_days"
            android:title="Forecast period"
            android:summary="Forecast period in days" />

        <SwitchPreference
            android:key="forecast_cache_enabled"
            android:title="Cache enabled"
            android:summary="Cache forecast in database" />

    </PreferenceCategory>

</PreferenceScreen>